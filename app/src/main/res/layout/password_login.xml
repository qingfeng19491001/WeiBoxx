<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp">

    <!-- 顶部：关闭按钮 + 设置按钮（水平布局） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/cheng" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_settings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_settings" />
    </LinearLayout>

    <!-- 微博Logo -->
    <ImageView
        android:id="@+id/iv_weibo_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_weibo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp" />

    <!-- 手机号文本 -->
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="156*****215"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp" />

    <!-- 复选框 + 同意协议文本（水平布局） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">

        <CheckBox
            android:id="@+id/cb_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/orange" />

        <TextView
            android:id="@+id/tv_agree_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录注册即表示同意用户协议、隐私条款和中国联通认证服务条款"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:layout_marginStart="5dp" />
    </LinearLayout>

    <!-- 本机号码一键登录按钮 -->
    <Button
        android:id="@+id/btn_one_key_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_one_key_login_bg"
        android:text="本机号码一键登录"
        android:textColor="@android:color/white" />

    <!-- 其他手机号码登录按钮 -->
    <Button
        android:id="@+id/btn_other_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_other_phone_bg"
        android:text="其他手机号码登录"
        android:textColor="@color/orange" />

    <!-- 未注册提示文本 -->
    <TextView
        android:id="@+id/tv_unregister_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未注册手机号验证通过后将自动注册"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp" />

    <!-- 底部：第三方登录图标（水平布局） -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <!-- 邮件图标 -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="邮件登录"
            android:src="@drawable/email" />

        <!-- 微信图标 -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="微信登录"
            android:src="@drawable/wechat" />

        <!-- QQ图标 -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="QQ登录"
            android:src="@drawable/qq" />

        <!-- 二维码图标 -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="二维码登录"
            android:src="@drawable/ic_scanner" />
    </LinearLayout>

</LinearLayout>